@model CapitolFarmsProject.Models.HorseGrainViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>HorseGrain</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="HorseGrain.Amount" class="control-label"></label>
                <input asp-for="HorseGrain.Amount" class="form-control" />
                <span asp-validation-for="HorseGrain.Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="HorseGrain.AMReport" /> @Html.DisplayNameFor(model => model.HorseGrain.AMReport)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="HorseGrain.PMReport" /> @Html.DisplayNameFor(model => model.HorseGrain.PMReport)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <select asp-for="HorseGrain.Horse" asp-items="Model.Horses">
                    <option value="">None</option>
                </select>
            </div>
            <div class="form-group">
                <select asp-for="HorseGrain.Grain" asp-items="Model.Grains">
                    <option value="">None</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
