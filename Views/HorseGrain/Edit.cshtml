@model CapitolFarmsProject.Models.HorseGrainViewModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Feed Amount</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="HorseGrain.HorseGrainId" />
            <div class="form-group">
                <label asp-for="HorseGrain.Amount" class="control-label"></label>
                <input asp-for="HorseGrain.Amount" class="form-control" />
                <span asp-validation-for="HorseGrain.Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="HorseGrain.AMReport" /> @Html.DisplayNameFor(model => model.HorseGrain.AMReport)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="HorseGrain.PMReport" /> @Html.DisplayNameFor(model => model.HorseGrain.PMReport)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <select asp-for="HorseGrain.HorseId" asp-items="Model.Horses">
                    <option value="">None</option>
                </select>
            </div>
            <div class="form-group">
                <select asp-for="HorseGrain.GrainId" asp-items="Model.Grains">
                    <option value="">None</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    @if (ViewData["returnId"] == null)
        {<a asp-action="Index">Back to List</a>}
    else {
        <a asp-controller="Horse" asp-action="Details" asp-route-id="@ViewData["returnId"]">Back to Horse</a>
    }
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
